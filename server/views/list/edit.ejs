<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/head.ejs'); %>
</head>
<body class="bg-light">
  <header>
    <%- include('../partials/header.ejs'); %>
  </header>
  <!-- Main Content -->
  <div class="container">
    <div class="row">
        <div class="offset-md-2 col-md-5"><br>
            <h1><%= title %></h1><br>

            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">Name </label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter the contact name!"
                    name="name" 
                    value="<%= BusinessList.name %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="numberTextField">Phone number </label>
                    <input type="text" class="form-control"
                    id="numberTextField"
                    placeholder="Enter the phone number!"
                    name="number"
                    value="<%= BusinessList.number %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="emailTextField">Email address </label>
                    <input type="text" class="form-control"
                    id="emailTextField"
                    placeholder="Enter the email address!"
                    name="emailaddress" 
                    value="<%= BusinessList.emailaddress %>"
                    required>
                </div><br>

                <button class="btn btn-primary" type="submit">
                <i class="fas fa-edit"></i> Submit</button>
                
                <a href="/business-list" class="btn btn-warning">
                <i class="fas fa-undo"></i> Cancel</a>

            </form>
        </div>

    </div>
</div>

  <footer>
    <%- include('../partials/footer.ejs'); %>  
  </footer>
  
  <script src="/jquery/dist/jquery.min.js"></script>
  <script src="/bootstrap/dist/js/bootstrap.min.js"></script>
  <script src="/scripts/app.js"></script>
</body>
</html>